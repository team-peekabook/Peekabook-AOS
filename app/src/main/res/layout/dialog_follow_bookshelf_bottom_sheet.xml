<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_fill_top20_rect"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tv_bookshelf_bottom_sheet_unfollow"
        style="@style/H2Md"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/bookshelf_bottom_sheet_unfollow"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_user_input_bottom_sheet_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="18dp"
        android:background="@color/peeka_g_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookshelf_bottom_sheet_unfollow" />

    <TextView
        android:id="@+id/tv_bookshelf_bottom_sheet_report"
        style="@style/H2Md"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="19dp"
        android:layout_marginVertical="18dp"
        android:gravity="center"
        android:text="@string/bookshelf_bottom_sheet_report"
        android:textColor="@color/peeka_red"
        app:layout_constraintBottom_toBottomOf="@id/view_user_input_bottom_sheet_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_user_input_bottom_sheet_1" />

    <View
        android:id="@+id/view_user_input_bottom_sheet_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="19dp"
        android:layout_marginTop="18dp"
        android:background="@color/peeka_g_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bookshelf_bottom_sheet_report" />

    <TextView
        android:id="@+id/tv_bookshelf_bottom_sheet_block"
        style="@style/H2Md"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="19dp"
        android:layout_marginVertical="18dp"
        android:gravity="center"
        android:text="@string/bookshelf_bottom_sheet_block"
        android:textColor="@color/peeka_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_user_input_bottom_sheet_2" />


</androidx.constraintlayout.widget.ConstraintLayout>